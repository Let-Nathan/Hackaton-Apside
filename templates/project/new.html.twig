{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-8">
                {{ form_start(form) }}
                <div class="container d-flex flex-column gap-5">
                    <div>
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title, {'attr':
                            {'class': 'd-flex flex-column w-100 p-2'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.subject) }}
                        {{ form_widget(form.subject, {'attr':
                            {'class': 'd-flex flex-column w-100 p-2'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.imageFile) }}
                        {{ form_widget(form.imageFile, {'attr':
                            {'class': ''}}) }}
                    </div>
                    <div>
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr':
                            {'class': 'd-flex flex-column w-100'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.technologies) }}
                        {{ form_widget(form.technologies, {'attr':
                            {'class': 'd-flex gap-2'}}) }}
                    </div>
                    <div class="d-flex flex-column gap-2">
                    <h2>Links</h2>
                        <div class="d-flex align-items-center gap-3">
                            <i class="bi bi-globe fs-2"></i>
                            {{ form_widget(form.websiteLink, {'attr':
                                {'class': 'col-6 p-2', 'placeHolder': 'link to Website'}}) }}
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <i class="bi bi-github fs-2"></i>
                            {{ form_widget(form.gitHubLink, {'attr':
                                {'class': 'col-6 p-2', 'placeHolder': 'link to GitHub'}}) }}
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <i class="bi bi-slack fs-2"></i>
                            {{ form_widget(form.slackLink, {'attr':
                                {'class': 'col-6 p-2', 'placeHolder': 'link to Slack'}}) }}
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <i class="bi bi-pencil-square fs-2"></i>
                            {{ form_widget(form.trelloLink, {'attr':
                                {'class': 'col-6 p-2', 'placeHolder': 'link to Trello'}}) }}
                        </div>
                    </div>
                    <div>
                        {{ form_widget(form.submit, {'attr':
                            {'class': 'btn btn-primary'}}) }}
                    </div>
                </div>

                <div>
                    {{ form_widget(form.userProjects, {'attr':
                        {'class': 'd-none'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-4 d-flex flex-column">
                <label for="add-collaborator">Add a collaborator</label>
                <input class="p-2" id="add-collaborator" name="add-collaborator">
                <div id="collaborators-selected" class="d-flex gap-2 flex-wrap mt-2">
                </div>
                <ul id='user-list' class="list-unstyled d-flex flex-column gap-1">
                    <p>no collaborators selected</p>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
